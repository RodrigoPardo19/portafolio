      </section>
      <section class="flex flex-col gap-4" id="experience">
        <h2 class="text-2xl font-semibold underline decoration-primary">Experiencia</h2>
        {
          jobs.map((job) => (
            <JobCard
              title={job.title}
              organization={job.organization}
              description={job.description}
              startDate={job.start}
              endDate={job.end}
            />
